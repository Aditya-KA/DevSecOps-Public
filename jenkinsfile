// scripted pipeline code for creating files and folders

node{
    stage("1.first stage create folder") {
        echo "executing scripted pipeline code for folder and file"
        sh "mkdir -p scripted-folder"
        echo "create filr inside the folder"
        sh "touch scripted-folder/scrpt-file.txt"
    }

    stage("2.add data to the file") {
        echo "update some content to the file"
        writeFile file: "scripted-folder/scrpt-file.txt", text: "we are writing scripted file"
        sh "ls"
        sh "ls -alrts"
    }
}