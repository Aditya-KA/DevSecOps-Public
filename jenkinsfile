// declarative pipeline code
pipeline {
    agent any

    stages {
        stage ("1. update the jenkins server") {
            steps {
                echo "updating Jenkin server"
                sh "yum update -y"
                sh "dnf update -y"
                sh "yum upgrade -y *"
            }
        }

        stage ("2. print system properties") {
            steps {
                echo "execute cal, kernal and other commands"
                sh "df -h"
                sh "uname -a"
                sh "cal"
                sh "free -m"
            }
        }
    }
}